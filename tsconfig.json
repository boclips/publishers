{
  "compilerOptions": {
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "es5",
    "lib": ["es2015", "es6", "dom"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "skipLibCheck": true,
    "paths": {
      "src/*": ["*"],
      "resources/*": ["../resources/*"],
      "test-support/*": ["../test-support/*"]
    }
  },
  "exclude": ["cypress", "node_modules", "dist"]
}
